{
    "compilerOptions": {
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es5", 
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false
}